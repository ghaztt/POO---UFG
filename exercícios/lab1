package lab1;

public class Curso {
public String nome; 
public String turno;
public int vagas;
public String local;

public void exibir() {
    System.out.println("nome: " + nome);
    System.out.println("turno: " + turno);
    System.out.println("vagas: " + vagas);
    System.out.println("local: " + local);
}
}

import java.util.Scanner;
 
class EntradaDados {
public static void main(String[] args) {

Scanner sc = new Scanner(System.in);

System.out.println("Curso 1");
System.out.println("Digite o nome do curso:");
String nome1 = sc.nextLine();

System.out.println("Digite o turno do curso:");
String turno1 = sc.nextLine();
		
System.out.println("Digite o número de vagas do curso:");
int vagas1 = sc.nextInt();
sc.nextLine();		

System.out.println("Digite o local do curso:");
String local1 = sc.nextLine();
		

System.out.println("Curso 2");
System.out.println("Digite o nome do curso:");
String nome2 = sc.nextLine();

System.out.println("Digite o turno do curso:");
String turno2 = sc.nextLine();
			
System.out.println("Digite o número de vagas do curso:");
int vagas2 = sc.nextInt();
sc.nextLine();

System.out.println("Digite o local do curso:");
String local2 = sc.nextLine();		


System.out.println("Curso 3");
System.out.println("Digite o nome do curso:");
String nome3 = sc.nextLine();

System.out.println("Digite o turno do curso:");
String turno3 = sc.nextLine();
			
System.out.println("Digite o número de vagas do curso:");
int vagas3 = sc.nextInt();
sc.nextLine();

System.out.println("Digite o local do curso:");
String local3 = sc.nextLine();	


System.out.println("Curso 4");
System.out.println("Digite o nome do curso:");
String nome4 = sc.nextLine();


System.out.println("Digite o turno do curso:");
String turno4 = sc.nextLine();
			
System.out.println("Digite o número de vagas do curso:");
int vagas4 = sc.nextInt();
sc.nextLine();	

System.out.println("Digite o local do curso:");
String local4 = sc.nextLine();	




Curso curso1 = new Curso();

curso1.nome = nome1;
curso1.turno = turno1;
curso1.vagas = vagas1;
curso1.local = local1;

Curso curso2 = new Curso();

curso2.nome = nome2;
curso2.turno = turno2;
curso2.vagas = vagas2;
curso2.local = local2;

Curso curso3 = new Curso();

curso3.nome = nome3;
curso3.turno = turno3;
curso3.vagas = vagas3;
curso3.local = local3;

Curso curso4 = new Curso();

curso4.nome = nome4;
curso4.turno = turno4;
curso4.vagas = vagas4;
curso4.local = local4;



System.out.println("\nDados do Curso 1:\n");
curso1.exibir();

System.out.println("\nDados do Curso 2:\n");
curso2.exibir();

System.out.println("\nDados do Curso 3:\n");
curso3.exibir();

System.out.println("\nDados do Curso 4:\n");
curso4.exibir();

sc.close();

}
}
